<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.TheCat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/grey_800</item>
    <item name="colorPrimaryVariant">@color/grey_dark_800</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/blue_grey_800</item>
    <item name="colorSecondaryVariant">@color/blue_grey_dark_800</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="android:textAllCaps">false</item>
    <item name="textAppearanceCaption">@style/Theme.TheCat.Caption</item>
    <item name="textAppearanceBody1">@style/Theme.TheCat.Body1</item>
    <item name="textAppearanceBody2">@style/Theme.TheCat.Body2</item>
    <item name="toolbarStyle">@style/Theme.TheCat.ToolbarStyle</item>
    <item name="materialCardViewStyle">@style/Theme.TheCat.CardView</item>
    <item name="materialButtonStyle">@style/Theme.TheCat.Button</item>
</style>

<!-- Splash Screen -->
<style name="Theme.TheCat.SplashTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@color/blue_grey_dark_800</item>
    <!-- Customize your theme here. -->
    <item name="android:colorBackground">@color/blue_grey_dark_800</item>

    <item name="android:windowBackground">@drawable/splash_background</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:noHistory">true</item>
    <item name="android:windowFullscreen">true</item>
</style>

<style name="Theme.TheCat.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
    <item name="android:elevation">0dp</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="backgroundColor">?attr/colorPrimary</item>
    <item name="android:backgroundTint">?attr/colorPrimary</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
</style>

<style name="Theme.TheCat.Caption" parent="TextAppearance.MaterialComponents.Caption">
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:gravity">center</item>
    <item name="android:letterSpacing">0</item>
</style>

<style name="Theme.TheCat.Body1" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:letterSpacing">0</item>
    <item name="android:padding">0dp</item>
</style>

<style name="Theme.TheCat.Body2" parent="TextAppearance.MaterialComponents.Body2">
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:letterSpacing">0</item>
    <item name="android:padding">0dp</item>
</style>

<style name="Theme.TheCat.CardView" parent="Widget.MaterialComponents.CardView">

    <item name="android:textSize">24sp</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>

    <item name="android:layout_margin">@dimen/cardview_margin</item>
    <item name="android:layout_marginStart">@dimen/cardview_margin</item>
    <item name="android:layout_marginEnd">@dimen/cardview_margin</item>
    <item name="android:layout_marginTop">@dimen/cardview_margin</item>
    <item name="android:layout_marginBottom">@dimen/cardview_margin</item>

    <item name="cardCornerRadius">20dp</item>
    <item name="cardElevation">4dp</item>
    <item name="cardMaxElevation">8dp</item>

    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:checkable">true</item>
</style>

<style name="Theme.TheCat.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">false</item>

    <item name="android:tint">?attr/colorOnPrimary</item>
    <item name="drawableTint">?attr/colorOnPrimary</item>
    <item name="android:ellipsize">end</item>
    <item name="android:enabled">true</item>
    <item name="android:lines">1</item>
    <item name="cornerRadius">16dp</item>
    <item name="strokeColor">?attr/colorPrimaryDark</item>
    <item name="strokeWidth">1dp</item>
</style>
</resources>
